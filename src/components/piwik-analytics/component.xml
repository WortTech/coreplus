<?xml version="1.0"?>
<!DOCTYPE component PUBLIC "SYSTEM" "http://corepl.us/api/2_4/component.dtd">
<component xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0.1" name="Piwik Analytics" execmode="web">
	<requires>
		<require name="core" type="component" version="2.5.7"/>
	</requires>
	<hooks>
		<hook name="/core/page/prerender" call="\Piwik\PiwikHelper::InstallTracking"/>
	</hooks>
	<description>
		Piwik displays reports regarding the geographic location of visits, the source of visits
		(i.e. whether they came from a website, directly, or something else), the technical capabilities
		of visitors (browser, screen size, operating system, etc.), what the visitors did
		(pages they viewed, actions they took, how they left), the time of visits and more.
		Provides simple Piwik Analytics integration into Core Plus.
	</description>
	<configs>
		<config key="/piwik/server/host" type="string" default="" description="Set to the hostname of your Piwik server"/>
		<config key="/piwik/siteid" type="int" default="" description="Set to your site id"/>
	</configs>
	<pages>
		<page baseurl="/piwik/configure" title="Piwik Analytics" selectable="0" admin="1" group="Configure"/>
	</pages>
	<view>
		<file filename="templates/pages/piwik/configure.tpl" md5="2ebddb8a00faee1306d901b3ef3f7204"/>
	</view>
